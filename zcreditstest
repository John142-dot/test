local ZCredits = {}

-- Create the GUI elements
function ZCredits:CreateCreditsUI()
    local Players = game:GetService("Players")
    local TweenService = game:GetService("TweenService")
    local SoundService = game:GetService("SoundService")

    -- Create ScreenGui
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Parent = Players.LocalPlayer:WaitForChild("PlayerGui")

    -- Create Credits Frame
    local CreditsFrame = Instance.new("Frame")
    CreditsFrame.Size = UDim2.new(0.5, 0, 0.5, 0)
    CreditsFrame.Position = UDim2.new(0.25, 0, 0.25, 0)
    CreditsFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 60)
    CreditsFrame.Parent = ScreenGui

    -- Create UICorner for squircle design
    local UICorner = Instance.new("UICorner")
    UICorner.CornerRadius = UDim.new(0.2, 0)
    UICorner.Parent = CreditsFrame

    -- Add Credits Text Labels
    local OwnerLabel = Instance.new("TextLabel")
    OwnerLabel.Size = UDim2.new(1, 0, 0, 50)
    OwnerLabel.Position = UDim2.new(0, 0, 0.1, 0)
    OwnerLabel.TextColor3 = Color3.new(1, 1, 1)
    OwnerLabel.BackgroundTransparency = 1
    OwnerLabel.Parent = CreditsFrame

    local ContributorsLabel = Instance.new("TextLabel")
    ContributorsLabel.Size = UDim2.new(1, 0, 0, 50)
    ContributorsLabel.Position = UDim2.new(0, 0, 0.3, 0)
    ContributorsLabel.TextColor3 = Color3.new(1, 1, 1)
    ContributorsLabel.BackgroundTransparency = 1
    ContributorsLabel.Parent = CreditsFrame

    local TestersLabel = Instance.new("TextLabel")
    TestersLabel.Size = UDim2.new(1, 0, 0, 50)
    TestersLabel.Position = UDim2.new(0, 0, 0.5, 0)
    TestersLabel.TextColor3 = Color3.new(1, 1, 1)
    TestersLabel.BackgroundTransparency = 1
    TestersLabel.Parent = CreditsFrame

    -- Close Button
    local CloseButton = Instance.new("TextButton")
    CloseButton.Size = UDim2.new(0.1, 0, 0.1, 0)
    CloseButton.Position = UDim2.new(0.9, 0, 0.05, 0)
    CloseButton.Text = "X"
    CloseButton.TextColor3 = Color3.fromRGB(255, 0, 0)
    CloseButton.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
    CloseButton.Parent = CreditsFrame

    -- Sound setup
    local sound = Instance.new("Sound")
    sound.SoundId = "rbxassetid://YOUR_SOUND_ID" -- Replace with your sound ID
    sound.Volume = 0.5
    sound.Parent = SoundService

    -- Play sound
    sound:Play()

    -- Function to close credits
    local function closeCredits()
        local slideTweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Linear, Enum.EasingDirection.Out)
        local slideTween = TweenService:Create(CreditsFrame, slideTweenInfo, {Position = UDim2.new(0.25, 0, 1, 0)})
        slideTween:Play()
        slideTween.Completed:Wait()
        ScreenGui:Destroy()
    end

    -- Connect close button
    CloseButton.MouseButton1Click:Connect(closeCredits)

    -- Return labels for setting names
    return OwnerLabel, ContributorsLabel, TestersLabel
end

-- Function to set credit names
function ZCredits:SetCreditName(creditType, name)
    if creditType == "owner" then
        self.OwnerLabel.Text = "Owner: " .. name
    elseif creditType == "contributor" then
        self.ContributorsLabel.Text = self.ContributorsLabel.Text .. ", " .. name
    elseif creditType == "tester" then
        self.TestersLabel.Text = self.TestersLabel.Text .. ", " .. name
    end
end

-- Initialize the credits UI
function ZCredits:Init()
    self.OwnerLabel, self.ContributorsLabel, self.TestersLabel = self:CreateCreditsUI()
end

return ZCredits
